{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./", 
    "outDir": "./dist", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true
  },
  "include": ["server.ts", "@types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
